 <category domain="http://news.thaipbs.or.th/category/tags/%E0%B8%AA%E0%B8%AB%E0%B8%A0%E0%B8%B2%E0%B8%9E%E0%B8%A2%E0%B8%B8%E0%B9%82%E0%B8%A3%E0%B8%9B">สหภาพยุโรป</category>
 <category domain="http://news.thaipbs.or.th/category/tags/%E0%B9%83%E0%B8%9A%E0%B9%80%E0%B8%AB%E0%B8%A5%E0%B8%B7%E0%B8%AD%E0%B8%87">ใบเหลือง</category>
