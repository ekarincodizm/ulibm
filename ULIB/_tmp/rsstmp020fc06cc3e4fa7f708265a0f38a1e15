 <category domain="http://news.thaipbs.or.th/category/tags/%E0%B9%82%E0%B8%97%E0%B8%A3%E0%B8%A8%E0%B8%B1%E0%B8%9E%E0%B8%97%E0%B9%8C">โทรศัพท์</category>
 <enclosure url="http://news.thaipbs.or.th/sites/default/files/news21042015/290002-imagejpeg-452482.jpg" length="149431" type="image/jpeg" />
 <pubDate>Tue, 21 Apr 2015 10:00:00 +0000</pubDate>
 <dc:creator>kultida</dc:creator>
