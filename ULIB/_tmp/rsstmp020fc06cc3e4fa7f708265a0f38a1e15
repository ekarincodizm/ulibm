 <category domain="http://news.thaipbs.or.th/category/tags/%E0%B8%84%E0%B8%A3%E0%B8%A1-0">ครม.</category>
 <category domain="http://news.thaipbs.or.th/category/tags/%E0%B8%A2%E0%B8%B2%E0%B8%81%E0%B8%88%E0%B8%99">ยากจน</category>
 <category domain="http://news.thaipbs.or.th/category/tags/%E0%B9%80%E0%B8%87%E0%B8%B4%E0%B8%99%E0%B8%AD%E0%B8%B8%E0%B8%94%E0%B8%AB%E0%B8%99%E0%B8%B8%E0%B8%99">เงินอุดหนุน</category>
 <category domain="http://news.thaipbs.or.th/category/tags/%E0%B9%80%E0%B8%94%E0%B9%87%E0%B8%81%E0%B9%81%E0%B8%A3%E0%B8%81%E0%B9%80%E0%B8%81%E0%B8%B4%E0%B8%94">เด็กแรกเกิด</category>
 <enclosure url="http://news.thaipbs.or.th/sites/default/files/news09042015/289020-imagejpeg-451099.jpg" length="130274" type="image/jpeg" />
